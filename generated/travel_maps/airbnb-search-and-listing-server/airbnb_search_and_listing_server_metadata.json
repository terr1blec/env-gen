{
  "description": "Search and retrieve detailed information about Airbnb listings with various filters and pagination support",
  "name": "Airbnb Search and Listing Server",
  "tools": [
    {
      "description": "Search for Airbnb listings with various filters and pagination. Provide direct links to the user",
      "input_schema": {
        "properties": {
          "check_in": {
            "description": "Check-in date in YYYY-MM-DD format",
            "type": "string"
          },
          "check_out": {
            "description": "Check-out date in YYYY-MM-DD format",
            "type": "string"
          },
          "guests": {
            "description": "Number of guests",
            "type": "number"
          },
          "location": {
            "description": "The city or country to search in",
            "type": "string"
          },
          "max_price": {
            "description": "Maximum price per night",
            "type": "number"
          },
          "min_price": {
            "description": "Minimum price per night",
            "type": "number"
          },
          "page": {
            "description": "Page number for pagination",
            "type": "number"
          },
          "per_page": {
            "description": "Number of results per page",
            "type": "number"
          },
          "property_type": {
            "description": "Type of property (e.g., Apartment, House)",
            "type": "string"
          }
        },
        "required": [
          "location"
        ],
        "type": "object"
      },
      "name": "airbnb_search",
      "output_schema": {
        "properties": {
          "has_next_page": {
            "description": "Whether there are more results available",
            "type": "boolean"
          },
          "has_previous_page": {
            "description": "Whether there are previous results available",
            "type": "boolean"
          },
          "page": {
            "description": "Current page number",
            "type": "number"
          },
          "per_page": {
            "description": "Number of results per page",
            "type": "number"
          },
          "results": {
            "description": "Array of listing objects matching search criteria",
            "type": "array"
          },
          "total_count": {
            "description": "Total number of matching listings",
            "type": "number"
          }
        },
        "type": "object"
      }
    },
    {
      "description": "Get detailed information about a specific Airbnb listing. Provide direct links to the user",
      "input_schema": {
        "properties": {
          "listing_id": {
            "description": "The unique identifier of the listing",
            "type": "string"
          }
        },
        "required": [
          "listing_id"
        ],
        "type": "object"
      },
      "name": "airbnb_listing_details",
      "output_schema": {
        "properties": {
          "amenities": {
            "description": "Array of available amenities",
            "type": "array"
          },
          "available_dates": {
            "description": "Array of available dates in YYYY-MM-DD format",
            "type": "array"
          },
          "bathrooms": {
            "description": "Number of bathrooms",
            "type": "number"
          },
          "bedrooms": {
            "description": "Number of bedrooms",
            "type": "number"
          },
          "currency": {
            "description": "Currency code (e.g., USD, EUR)",
            "type": "string"
          },
          "description": {
            "description": "Detailed description of the listing",
            "type": "string"
          },
          "host": {
            "description": "Host information including name, rating, and response rate",
            "type": "object"
          },
          "id": {
            "description": "Unique identifier for the listing",
            "type": "string"
          },
          "images": {
            "description": "Array of image URLs for the listing",
            "type": "array"
          },
          "location": {
            "description": "Location information including city, country, and coordinates",
            "type": "object"
          },
          "max_guests": {
            "description": "Maximum number of guests allowed",
            "type": "number"
          },
          "price_per_night": {
            "description": "Price per night in the specified currency",
            "type": "number"
          },
          "property_type": {
            "description": "Type of property (e.g., Apartment, House)",
            "type": "string"
          },
          "rating": {
            "description": "Overall rating of the listing",
            "type": "number"
          },
          "review_count": {
            "description": "Number of reviews",
            "type": "number"
          },
          "title": {
            "description": "Title of the listing",
            "type": "string"
          }
        },
        "type": "object"
      }
    }
  ]
}