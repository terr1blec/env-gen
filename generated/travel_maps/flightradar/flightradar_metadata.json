          },
          "status": {
            "type": "string",
            "description": "Flight status (scheduled, active, landed, cancelled, diverted)"
          },
          "max_results": {
            "type": "integer",
            "description": "Maximum number of results to return (default: 20)"
          }
        }
      },
      "output_schema": {
        "type": "object",
