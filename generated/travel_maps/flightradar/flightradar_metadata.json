{
  "name": "FlightRadar",
  "description": "Flight tracking and information service providing real-time flight data, status, and search capabilities",
  "tools": [
    {
      "name": "get_flight_data",
      "description": "Get detailed information for a specific flight including departure/arrival details, status, and aircraft information",
      "input_schema": {
        "type": "object",
        "properties": {
          "flight_identifier": {
            "type": "string",
            "description": "Flight identifier (IATA code, ICAO code, or flight number)"
          }
        },
        "required": ["flight_identifier"]
      },
      "output_schema": {
        "type": "object",
        "properties": {
          "flight_iata": {
            "type": "string",
            "description": "Flight IATA code"
          },
          "flight_icao": {
            "type": "string",
            "description": "Flight ICAO code"
          },
          "flight_number": {
            "type": "string",
            "description": "Flight number"
          },
          "airline": {
            "type": "string",
            "description": "Airline name"
          },
          "airline_iata": {
            "type": "string",
            "description": "Airline IATA code"
          },
          "airline_icao": {
            "type": "string",
            "description": "Airline ICAO code"
          },
          "departure": {
            "type": "object",
            "description": "Departure information",
            "properties": {
              "airport": {
                "type": "string",
                "description": "Departure airport name"
              },
              "iata": {
                "type": "string",
                "description": "Departure airport IATA code"
              },
              "city": {
                "type": "string",
                "description": "Departure city"
              },
              "country": {
                "type": "string",
                "description": "Departure country"
              },
              "time": {
                "type": "string",
                "description": "Departure time (HH:MM)"
              },
              "terminal": {
                "type": "string",
                "description": "Departure terminal"
              },
              "gate": {
                "type": "string",
                "description": "Departure gate"
              }
            }
          },
          "arrival": {
            "type": "object",
            "description": "Arrival information",
            "properties": {
              "airport": {
                "type": "string",
                "description": "Arrival airport name"
              },
              "iata": {
                "type": "string",
                "description": "Arrival airport IATA code"
              },
              "city": {
                "type": "string",
                "description": "Arrival city"
              },
              "country": {
                "type": "string",
                "description": "Arrival country"
              },
              "time": {
                "type": "string",
                "description": "Arrival time (HH:MM)"
              },
              "terminal": {
                "type": "string",
                "description": "Arrival terminal"
              },
              "gate": {
                "type": "string",
                "description": "Arrival gate"
              }
            }
          },
          "status": {
            "type": "string",
            "description": "Flight status (scheduled, active, landed, cancelled, diverted)"
          },
          "aircraft": {
            "type": "string",
            "description": "Aircraft ICAO code"
          },
          "duration": {
            "type": "string",
            "description": "Flight duration (e.g., '6h 00m')"
          },
          "error": {
            "type": "string",
            "description": "Error message if flight not found"
          }
        }
      }
    },
    {
      "name": "search_flights",
